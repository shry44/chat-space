.chat-main
  .chat-main__group-info
    .chat-main__group-info__box
      .chat-main__group-info__box__group-name
        test
      .chat-main__group-info__box__members
        Member:
    = link_to "#", class: "chat-main__group-info__btn" do
      Edit
      
  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message], html: { class: "message-form" } do |f|
      .message-form__input-box
        = f.text_field :content, class: 'message-form__input-box__text', placeholder: "type a message"
        = f.label :image, class: 'message-form__input-box__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: "message-form__input-box__image__file"
      = f.submit 'Send', class: "message-form__submit-btn"
